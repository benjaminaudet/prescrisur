description "prescrisur"

start on runlevel [2345]
stop on runlevel [!2345]

# never stop trying to respawn
respawn
respawn limit unlimited

# Drop privileges
setuid prescrisur
setgid nogroup

script
  set -a
  . /etc/prescrisur.config
  /usr/share/python/prescrisur/bin/python /usr/share/python/prescrisur/bin/gunicorn -w 3 -b 0.0.0.0:5000 -t 5 --worker-class gevent api:app
end script

# prevent re-spawning more than once every second
post-stop exec sleep 1